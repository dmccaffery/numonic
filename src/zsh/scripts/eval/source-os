#! /usr/bin/env zsh

__numonic_source_os() {

	for current in $(print-unames); do
		uname_path="${NUMONIC_HOME}/zsh/scripts/${current}"

		if [ ! -d "${uname_path}" ]; then
			continue
		fi

		export PATH="${uname_path}:${PATH}"

		if [ -d "${uname_path}/eval" ]; then
			for eval_script in "${uname_path}"/eval/*; do
				. "${eval_script}"
			done
		fi
	done
}

__numonic_source_os
