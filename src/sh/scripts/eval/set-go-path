#! /usr/bin/env sh

if ! command -v go 1>/dev/null 2>&1; then
	return 0
fi

GOPATH=$(go env GOPATH)
GOPATH="${GOPATH:-${HOME}/go}"

GOBIN=$(go env GOBIN)
GOBIN="${GOBIN:-${GOPATH}/bin}"

if [ ! -d "${GOBIN}" ]; then
	mkdir -p "${GOBIN}"
fi

export GOPATH
export GOBIN

export PATH="${GOBIN}:${PATH}"
