#! /usr/bin/env sh

if command -v nvm >/dev/null 2>&1; then
	return 0
fi

if command -v brew 1>/dev/null 2>&1; then
	nvm_dir=$(brew --prefix --installed nvm 2>/dev/null || printf '')
fi

nvm_home="${HOME}/.nvm"

if [ ! -d "${nvm_home}" ]; then
	nvm_home="${NUMONIC_SHARE}/nvm"
fi

nvm_dir=${nvm_dir:-${nvm_home}}

if [ -f "${nvm_dir}"/nvm.sh ]; then
	export NVM_DIR="${nvm_home}"
	. "${nvm_dir}"/nvm.sh
fi
